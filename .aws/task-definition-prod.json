{
  "containerDefinitions": [
    {
      "name": "tis-notification-generator",
      "image": "430723991443.dkr.ecr.eu-west-2.amazonaws.com/tis-notification-generator:stable",
      "portMappings": [
        {
          "containerPort": 8080
        }
      ],
      "environment": [
        {
          "name": "TITLE",
          "value": "tis-notification-generator"
        },
        {
          "name": "AWS_REGION",
          "value": "eu-west-2"
        },
        {
          "name": "SENTRY_ENVIRONMENT",
          "value": "prod"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "awslogs-tis-notification-generator",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "awslogs-tis-notification-generator"
        }
      },
      "secrets": [
        {
          "name": "SENTRY_DSN",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-notification-generator-sentry-dsn"
        },
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-notification-generator-db-host-prod"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-notification-generator-db-port-prod"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-notification-generator-db-user-prod"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/tis-notification-generator-db-password-prod"
        }
      ]
    }
  ],
  "executionRoleArn": "ecsTaskExecutionRole",
  "family": "tis-notification-generator",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "1024"
}
